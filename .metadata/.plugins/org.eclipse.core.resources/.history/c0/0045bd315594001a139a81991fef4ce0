package projeto_pilha;

public class Pilha {
	private int topo; // indice
	private int vetor[]; //vetor

	public Pilha() {
		vetor=new int[10]; // instancia o objeto
		topo=-1; //pilha iniciando em 0. 0 já é uma posição da pilha, por isso o -1
	}


	//Metodo que verifica se a pilha está vazia
	public boolean vazio() { //metodo booleano pois ou é verdadeiro ou falso
		return (topo==1);
	}

	//Metodo que verifica se a pilha está cheia
	public boolean cheio() {
		return (topo==9);			// 9 pois a pilha contem 10 elementos de 0 a 9
	}


}














}
